{
  "name": "@bold-ui/react",
  "version": "0.0.1",
  "description": "Modern, fast, and accessible React component library",
  "files": [
    "dist/**"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "run-p start storybook",
    "start": "run-s build && run-p -lcr rollup:watch gulp:watch",
    "build": "run-s -nlc clean-build rollup gulp",
    "rollup": "rollup --config",
    "rollup:watch": "rollup --config --watch",
    "gulp": "gulp",
    "gulp:watch": "gulp watch",
    "clean-build": "rimraf ./dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic",
    "publish-build": "pnpm run build && pnpm publish --access public",
    "generate": "plop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PawanKolhe/bold-ui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/PawanKolhe/bold-ui/issues"
  },
  "homepage": "https://github.com/PawanKolhe/bold-ui#readme",
  "keywords": [
    "react",
    "react-components",
    "design-system",
    "ui"
  ],
  "author": "Pawan Kolhe <pawanashishkolhe@gmail.com> (https://pawankolhe.com/)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "browserslist": [
    "defaults"
  ],
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18.0.0",
    "react": "^17.0.0 || ^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@storybook/addon-a11y": "^7.0.18",
    "@storybook/addon-essentials": "7.0.18",
    "@storybook/addon-interactions": "7.0.18",
    "@storybook/addon-links": "7.0.18",
    "@storybook/blocks": "7.0.18",
    "@storybook/react": "^7.0.18",
    "@storybook/react-vite": "7.0.18",
    "@storybook/testing-library": "0.0.14-next.2",
    "@types/gulp": "^4.0.11",
    "@types/gulp-concat": "^0.0.34",
    "@types/react": "^18.2.7",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "del": "^7.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "glob": "^10.2.6",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "plop": "^3.1.2",
    "postcss-preset-env": "^8.4.1",
    "prop-types": "15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.23.0",
    "rollup-plugin-css-only": "^4.3.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.62.1",
    "storybook": "7.0.18"
  },
